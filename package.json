{
  "name": "bellasreef-webui",
  "version": "1.0.0",
  "description": "A modern web interface for the Bella's Reef Controller system",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview --host 0.0.0.0 --port 3000",
    "start": "vite preview --host 0.0.0.0 --port 3000",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "pi:install": "NODE_OPTIONS='--max-old-space-size=2048' npm install",
    "pi:build": "NODE_OPTIONS='--max-old-space-size=2048' npm run build",
    "pi:dev": "NODE_OPTIONS='--max-old-space-size=1024' npm run dev"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "@tanstack/react-query": "^4.29.0",
    "axios": "^1.3.0",
    "socket.io-client": "^4.6.0",
    "recharts": "^2.5.0",
    "lucide-react": "^0.263.0",
    "clsx": "^1.2.0",
    "tailwind-merge": "^1.13.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.0",
    "typescript": "^4.9.3",
    "vite": "^4.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "reef",
    "aquarium",
    "controller",
    "web-ui",
    "react",
    "typescript"
  ],
  "author": "Bella's Reef Team",
  "license": "MIT"
} 